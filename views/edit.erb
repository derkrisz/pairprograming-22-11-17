

<form action="/pizzas/<%=@pizza.id%>" method="post">
  <input type="hidden" name="_method" value="PUT">


  <div class="field-group">
    <label for="first-name-field" class="label">First Name:</label>
    <div class="field">
      <input
        type="text"
        name="first_name"
        id="first-name-field"
        placeholder="First name"
        value="<%= @pizza.first_name %>"
        required
      />
   </div>
  </div>

  <div class="field-group">
    <label for="last-name-field" class="label">Last Name:</label>
    <div class="field">
      <input
        type="text"
        name="last_name"
        id="last-name-field"
        placeholder="Last name"
        value="<%= @pizza.last_name %>"
        required
      />
    </div>
  </div>

  <div class="field-group">
    <label for="pizza-selection" class="label">Select a pizza:</label>
    <div class="field">
      <select name="topping" id="pizza-selection">

        <option <%= "selected" if @pizza.topping == "Calzone"  %>value="Calzone">Calzone</option>

        <option <%= "selected" if @pizza.topping == "Margherita"  %> value="Margherita">Margherita</option>

          <option <%= "selected" if @pizza.topping == "Italian Sausage"  %> value="Italian Sausage">Italian Sausage</option>

      </select>
    </div>
  </div>

  <div class="field-group">
    <label for="quantity-field" class="label">Quantity:</label>
    <div class="field">
      <input
        type="number"
        name="quantity"
        id="quantity-field"
        value ="<%= @pizza.quantity %>"
      />
    </div>
  </div>


<input type="submit" value="Edit Pizza">
</form>
